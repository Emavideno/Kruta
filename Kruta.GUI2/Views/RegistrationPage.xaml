<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Kruta.GUI2.ViewModels"
             x:Class="Kruta.GUI2.Views.RegistrationPage"
             Title="Регистрация"
             BackgroundColor="{StaticResource Secondary}">


    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" 
                             Padding="30" 
                             Spacing="25">

            <Label Text="KRUTA GAME"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

            <Label Text="Введите ваше имя, чтобы войти в игру"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Opacity="0.8" />

            <Frame Padding="0" HasShadow="False" CornerRadius="8" BackgroundColor="White">
                <Entry Placeholder="Ваш никнейм..."
                       Text="{Binding Nickname}"
                       FontSize="18"
                       HeightRequest="50"
                       TextColor="Black"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <Button Text="ЗАРЕГИСТРИРОВАТЬСЯ"
                    Command="{Binding RegisterCommand}"
                    HeightRequest="60"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />

            <VerticalStackLayout Spacing="10" 
                                 IsVisible="{Binding IsBusy}">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   Color="{StaticResource Primary}"
                                   HorizontalOptions="Center"
                                   HeightRequest="40"
                                   WidthRequest="40" />

                <Label Text="Подключение к серверу..."
                       HorizontalOptions="Center"
                       FontSize="12"
                       TextColor="{StaticResource Gray500}" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>